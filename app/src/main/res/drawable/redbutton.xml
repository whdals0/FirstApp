<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@color/red_color"
                android:centerColor="@color/red_color"
                android:endColor="@color/red_color"
                android:centerY="0.5"
                android:angle="270">
